<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/iv_play_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintLeft_toLeftOf="@+id/guide_video_icon"
        app:layout_constraintTop_toTopOf="@+id/guide_video_center"
        app:layout_constraintBottom_toTopOf="@+id/guide_video_center"
        android:src="@drawable/ic_play_arrow_black_48dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/tv_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/guide_video_center"
        app:layout_constraintBottom_toTopOf="@+id/guide_video_center"
        app:layout_constraintLeft_toRightOf="@+id/guide_vert_text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"

        tools:text="Test Video"/>

    <android.support.constraint.Guideline
        android:id="@+id/guide_video_center"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <android.support.constraint.Guideline
        android:id="@+id/guide_video_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/guide_vert_text"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"/>

</android.support.constraint.ConstraintLayout>